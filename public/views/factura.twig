<html>
  <head>
    <style>
    body {
    font-family:sans-serif;
    font-size:10pt;
    }

    p {
    margin:0;
    }

    td {
    vertical-align:top;
    }

    .items td {
    border-left:.1mm solid #000;
    border-right:.1mm solid #000;
    }

    table thead td {
    background-color:#EEE;
    text-align:center;
    border:.1mm solid #000;
    }

    .items td.blanktotal {
    background-color:#FFF;
    border:0 none #000;
    border-top:.1mm solid #000;
    border-right:.1mm solid #000;
    }

    .items td.totals {
    text-align:right;
    border:.1mm solid #000;
    }

    #comentario {
    border:.2mm solid #000;
    width:95%;
    margin:5mm auto;
    padding:5mm;
    }
    #header table{
      width:100%;
    }
    #header table tr td{
      width:50%;
    }
    .right{
      text-align: right;
    }
    #header-factura, #header-factura td, #header-factura th{
      border-collapse: collapse;
      text-align: center;
      border: .1mm solid #000;
    }
    #header-factura td{
      padding: auto 0.5em;
    }
    </style>

  </head>
  <body>
    <htmlpageheader name="myheader">
    <div id='header'>
      <table>
        <tr>
          <td>
            <img src='/public/views/img/logo_factura.png'><br>
            <span style="font-weight: bold; font-size: 14pt;">Erasmus Student Network Barcelona</span>
            <br />
            Pla&ccedil;a C&iacute;vica,Cerdanyola del Vall&egrave;s
            <br />
            08290 (Barcelona)
            <br />
            info@esnuab.org
          </td>
          <td style="text-align: right;">
            <table id="header-factura">
              <tr><th colspan='2'>FACTURA</th></tr>
              <tr><td>N&uacute;mero</td><td>Fecha</td></tr>
              <tr><td>{{facturaId}}</td><td>{{fecha}}</td></tr>
            </table>
          </td>
        </tr>
      </table>
    </div>
    </htmlpageheader>

  <htmlpagefooter name="myfooter">
    <div style="border-top: 1px solid #000000; font-size: 9pt; text-align: center; padding-top: 3mm; ">
      P&aacute;gina {PAGENO} de {nb}
    </div>
  </htmlpagefooter>

  <sethtmlpageheader name="myheader" value="on" show-this-page="1" />
  <sethtmlpagefooter name="myfooter" value="on" />
  
  <table width="100%" style="font-family: serif;" cellpadding="10">
    <tr>
      <td width="45%" style="border: 0 solid #888888;"></td>
      <td width="10%">&nbsp;</td>
      <td width="45%" style="border: 0.1mm solid #888888;">
        Pol Barbarroja Schuler<br /><br />345 Anotherstreet<br />Little Village<br />Their City<br />CB22 6SO</td>
    </tr>
  </table>


  <table class="items" width="100%" style="font-size: 9pt; border-collapse: collapse;" cellpadding="8">
    <thead>
      <tr>
        <td width="60%">CONCEPTO</td>
        <td width="10%">CANTIDAD</td>
        <td width="10%">PRECIO</td>
        <td width="10%">IVA</td>
        <td width="10%">TOTAL</td>
      </tr>
    </thead>
    <tbody>
      <!-- ITEMS HERE -->
      {% for item in items %}
      <tr>
        <td align="center"><h3>{{ item.concepto }}</h3>Valida para un anyo.</td>
        <td align="center">{{ item.cantidad }}</td>
        <td align="right">{{ item.precio }}&euro;</td>
        <td align="center">{{ item.iva }}%</td>
        <td align="right">{{ item.total }}&euro;</td>
      </tr>
      {% endfor %}

      <!-- END ITEMS HERE -->
      <tr>
        <td class="blanktotal" colspan="3" rowspan="6"></td>
        <td class="totals">Subtotal:</td>
        <td class="totals">{{total.subtotal}}&euro;</td>
      </tr>
      <tr>
        <td class="totals">IVA:</td>
        <td class="totals">{{total.iva}}&euro;</td>
      </tr>
      <tr>
        <td class="totals"><b>TOTAL:</b></td>
        <td class="totals"><b>{{total.total}}&euro;</b></td>
      </tr>
    </tbody>
  </table>
  <div id='comentario'><h2>Comentarios</h2></div>
  </body>
</html>